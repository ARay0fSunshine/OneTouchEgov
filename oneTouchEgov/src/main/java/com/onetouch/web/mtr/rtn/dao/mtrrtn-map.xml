	<!-- 반품내역 조건 조회 -->
	<select id="selectRtn" resultType="com.onetouch.web.mtr.rtn.dao.MtrRtnVO">
		SELECT 
			TO_CHAR(A.IN_DATE, 'yyyy-MM-dd') AS IN_DATE,
			A.MTR_CD,
			MTR_NM,
			UNIT_NM,
			COMP_NM,
			ORD_NO,
			RTN_AMT,
			UNIT_COST,
			MTR_LOT
			
			A.IN_NO, 
			TO_CHAR(A.IN_DATE, 'yyyy-MM-dd') AS IN_DATE, 
			A.MTR_CD, 
			B.MTR_NM, 
			FN_GET_BAS_DTL_CD_TO_NM(B.UNIT) AS UNIT,
			B.MNG_AMT,
			A.ORD_NO, 
			A.FLT_AMT, 
			A.IN_AMT, 
			A.UNIT_COST, 
			A.TOT_COST,
			FN_GET_BAS_DTL_CD_TO_NM(B.COMP_CD) AS COMP_NM  
		FROM 
			MTR_IN A, ADM_MTR B
		WHERE 
			A.MTR_CD = B.MTR_CD
		
		<if test="startDate != null and startDate != ''"> 
			<![CDATA[AND TO_CHAR(A.IN_DATE, 'yyyy-MM-dd') >= #{startDate}]]>
		</if>
		<if test="endDate != null and endDate != ''"> 
			<![CDATA[AND TO_CHAR(A.IN_DATE, 'yyyy-MM-dd') <= #{endDate}]]>
		</if>
		<if test="compCd != null and compCd != ''">
			AND B.COMP_CD = #{compCd}
		</if>
		<if test="ditemCode != null and ditemCode != ''">
			AND B.MTR_CD = #{ditemCode}
		</if>
	</select>
